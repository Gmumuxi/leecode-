// 1 <= chips.length <= 100
// 1 <= chips[i] <= 10^9
class Solution {
    public int minCostToMoveChips(int[] position) {
        int sum0 = 0, sum1 = 0;
        for(int i = 0; i < position.length; i++) {
            if(position[i] % 2 == 0) {
                sum0++;
            } else {
                sum1++;
            }
        }
        if(sum0 > sum1) {
            return sum1;
        }
        return sum0;
    }
}
